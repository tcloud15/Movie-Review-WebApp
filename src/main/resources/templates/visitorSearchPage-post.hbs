{{> header.hbs }}

<h2>List of movies</h2>

<table>
    <tr>
        <th>Movie</th>
        <th>US Release Date</th>
        <th>Intl Release Date</th>
        <th>Movie Rating</th>
    </tr>
    {{#visitorSearch}}
    <tr>
        <td><a href="/visitor-movie-report/{{name}}/{{date}}/{{dateuk}}">{{name}}</a></td>
        <td>{{date}}</td>
        <td>{{dateuk}}</td>
        <td>{{rating}}</td>
    </tr>
    {{/visitorSearch}}
</table>

{{#errorMsg}}
<p style="font-weight: bold; color: red;">{{errorMsg}}</p>
{{/errorMsg}}

<form method="get" action="/homepage">
    <p><button type="submit">Go back</button></p>
</form>

{{> footer.hbs }}